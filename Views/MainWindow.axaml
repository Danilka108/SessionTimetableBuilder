<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Avalonia.SessionTimetableBuilder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Avalonia.SessionTimetableBuilder.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.SessionTimetableBuilder.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Avalonia.SessionTimetableBuilder">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl>
        <TabItem>
            <TabItem.Header>
                <TextBlock VerticalAlignment="Center">Teachers</TextBlock>
            </TabItem.Header>
            <views:TeachersView/>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <TextBlock VerticalAlignment="Center">Groups</TextBlock>
            </TabItem.Header>
            <views:GroupsView/>
        </TabItem>
    </TabControl>
</Window>
