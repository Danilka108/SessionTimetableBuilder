<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="Window">
        <Setter Property="SizeToContent" Value="WidthAndHeight" />
        <Setter Property="CanResize" Value="False" />
        <Setter Property="WindowStartupLocation" Value="CenterOwner" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="Window > Grid">
        <Setter Property="Width" Value="350" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="Window > Grid > ProgressBar">
        <Setter Property="Grid.Row" Value="0" />
    </Style>

    <Style Selector="Window > Grid > StackPanel">
        <Setter Property="Grid.Row" Value="1" />
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="Window > Grid > StackPanel > WrapPanel">
        <Setter Property="Margin" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style Selector="Window > Grid > StackPanel > WrapPanel > Button:nth-child(2n+1)">
        <Setter Property="Margin" Value="0 0 12 0" />
    </Style>
</Styles>