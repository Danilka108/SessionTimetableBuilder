<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Adapters.Common.ViewModels;assembly=Adapters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Infrastructure.Common.Views.ConfirmDialogWindow"
        Title="Confirm dialog">

    <Design.DataContext>
        <viewModels:ConfirmDialogViewModel />
    </Design.DataContext>

    <Window.Styles>
        <StyleInclude Source="/Styles/Dialog.axaml" />
    </Window.Styles>

    <StackPanel Margin="24" Width="300" VerticalAlignment="Stretch" HorizontalAlignment="Center">
        <TextBlock Margin="0 0 0 8" TextWrapping="WrapWithOverflow" HorizontalAlignment="Left"
                   Classes="TitleLarge"
                   Text="{Binding Action}" />

        <TextBlock Margin="0 0 0 20" TextWrapping="WrapWithOverflow" HorizontalAlignment="Stretch"
                   Classes="BodyLarge"
                   Text="{Binding Message}" />

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Margin="0 0 12 0" HorizontalAlignment="Right" Classes="Outline"
                    Command="{Binding Confirm}">
                <TextBlock HorizontalAlignment="Right" Classes="LabelSmall" Text="{Binding Action}" />
            </Button>
            <Button HorizontalAlignment="Right" Classes="Outline" Command="{Binding Cancel}">
                <TextBlock HorizontalAlignment="Right" Classes="LabelSmall" Text="Cancel" />
            </Button>
        </StackPanel>
    </StackPanel>
</Window>