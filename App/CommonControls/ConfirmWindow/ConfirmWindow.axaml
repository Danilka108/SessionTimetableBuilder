<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:confirmWindow="clr-namespace:App.CommonControls.ConfirmWindow"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="App.CommonControls.ConfirmWindow.ConfirmWindow"
        SizeToContent="Height"
        MaxWidth="300"
        WindowStartupLocation="CenterOwner"
        Title="{Binding Header}">

    <Design.DataContext>
        <confirmWindow:ConfirmWindowViewModel />
    </Design.DataContext>

    <StackPanel Margin="24" HorizontalAlignment="Center">
        <TextBlock TextWrapping="WrapWithOverflow" HorizontalAlignment="Stretch"
                   Classes="TitleMedium"
                   Text="{Binding Message}" />

        <StackPanel Margin="0 12 0 0 " HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Margin="0 0 6 0" Command="{Binding Confirm}">
                <TextBlock Classes="TitleSmall" Text="{Binding Action}" />
            </Button>
            <Button HorizontalAlignment="Center" Command="{Binding Close}">
                <TextBlock Classes="TitleSmall" Text="Close" />
            </Button>
        </StackPanel>
    </StackPanel>
</Window>