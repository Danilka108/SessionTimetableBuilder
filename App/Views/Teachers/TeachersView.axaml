<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:teachers="clr-namespace:App.Views.Teachers"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Views.Teachers.TeachersView">

    <Design.DataContext>
        <teachers:TeachersViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *">
        <Button Margin="0 8" Command="{Binding CreateNewTeacherCommand}">
            <TextBlock Classes="TitleMedium">Добавить преподавателя</TextBlock>
        </Button>

        <ScrollViewer Grid.Row="1">
            <ItemsControl Items="{Binding TeacherViewModels}" />
        </ScrollViewer>
    </Grid>
</UserControl>