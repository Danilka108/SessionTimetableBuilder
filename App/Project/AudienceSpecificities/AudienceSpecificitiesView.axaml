<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:audienceSpecificities="clr-namespace:App.Project.AudienceSpecificities"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Project.AudienceSpecificities.AudienceSpecificitiesView">

    <Design.DataContext>
        <audienceSpecificities:AudienceSpecificitiesViewModel />
    </Design.DataContext>

    <Expander HorizontalContentAlignment="Stretch">
        <Expander.Header>
            <TextBlock Classes="TitleLarge" Text="{StaticResource AudienceSpecificitiesTitle}" />
        </Expander.Header>
        <Expander.Content>
            <ItemsControl Items="{Binding Specificities}" />
        </Expander.Content>
    </Expander>
</UserControl>