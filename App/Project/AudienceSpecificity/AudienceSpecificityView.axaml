<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:audienceSpecificity="clr-namespace:App.Project.AudienceSpecificity"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Project.AudienceSpecificity.AudienceSpecificityView">

    <Design.DataContext>
        <audienceSpecificity:AudienceSpecificityViewModel />
    </Design.DataContext>

    <Button Margin="0 4" HorizontalAlignment="Stretch">
        <TextBlock Padding="2 6" Classes="TitleMedium" Text="{Binding Description}" />
    </Button>
</UserControl>