<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:audienceSpecificityCard="clr-namespace:App.Project.AudienceSpecificityCard"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Project.AudienceSpecificityCard.AudienceSpecificityCardView">

    <Design.DataContext>
        <audienceSpecificityCard:AudienceSpecificityCardViewModel />
    </Design.DataContext>

    <DockPanel>
        <Button Command="{Binding Show}" CornerRadius="2" HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch" Padding="8 6"
                Margin="0 4">
            <Button.Background>
                <SolidColorBrush Color="Black" Opacity="0.08" />
            </Button.Background>
            <TextBlock Classes="LabelLarge" Text="{Binding Description}" />
        </Button>
    </DockPanel>
    <!-- <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="12 8"> -->
    <!--     <TextBlock Classes="LabelLarge" Text="{Binding Description}"/> -->
    <!-- </Button> -->
</UserControl>