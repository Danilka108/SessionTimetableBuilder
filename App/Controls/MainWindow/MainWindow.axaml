<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mainWindow="using:App.Controls.MainWindow"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:teachers="clr-namespace:App.Controls.Teachers"
        xmlns:groups="clr-namespace:App.Controls.Groups"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="App.Controls.MainWindow.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="{StaticResource MainWindowTitle}">

    <Design.DataContext>
        <mainWindow:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="1*,4*">
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <TextBlock VerticalAlignment="Center" Text="{StaticResource TeachersString}" />
                </TabItem.Header>
                <teachers:TeachersControl DataContext="{Binding TeachersViewModel}" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock VerticalAlignment="Center" Text="{StaticResource GroupsString}" />
                </TabItem.Header>
                <groups:GroupsControl DataContext="{Binding GroupsViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>

</Window>