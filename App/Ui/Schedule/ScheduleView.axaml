<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:App.Models"
             xmlns:dailySchedule="clr-namespace:App.Ui.DailySchedule"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="App.Ui.Schedule.ScheduleView">

    <Design.DataContext>
        <models:Schedule />
    </Design.DataContext>

    <StackPanel>
        <TextBlock Margin="5 0 0 12" Classes="TitleLarge" Text="{StaticResource WorkScheduleString}" />

        <ItemsControl Items="{Binding }">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <dailySchedule:DailyScheduleView DataContext="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</UserControl>