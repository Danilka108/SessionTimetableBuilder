<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:App.Ui.Models"
             xmlns:classSchedule="clr-namespace:App.Ui.TeacherClassSchedule"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             DataContext="{d:DesignInstance models:Schedule+IItem}"
             x:Class="App.Ui.TeacherDailySchedule.TeacherDailyScheduleView">

    <Border Classes="Small" Background="White" Padding="8 0" Margin="0 0 0 12">
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="0 4 0 4 " Classes="TitleMedium" FontWeight="Bold" Text="{Binding Name}" />

            <ItemsControl Items="{Binding DailySchedule}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <classSchedule:TeacherClassScheduleView />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Border>
</UserControl>